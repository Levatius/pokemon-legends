  -- Move Damages
  for i = 0, 2 do
    self.createButton({
      click_function = "dummy_button",
      function_owner = self,
      position       = {0.65, 0.05, -1.75 + i * 0.525},
      width          = 0,
      height         = 0,
      font_size      = 200,
      font_color     = WHITE_COLOUR
    })
  end
  -- Tactics Button
  self.createButton({
    click_function = "tactics_button_toggle",
    function_owner = self,
